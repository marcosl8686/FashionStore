    <script type="text/javascript">
        var total = localStorage.getItem("total");
        console.log(total);

        $("#total").text(total);

        $("#placeOrder").on("click", function(){
            console.log('place order was submit');
            //Get information

            var fulladdress = '';

            var add1 = $(".address1").text();
            var add2 = $(".address2").text();
            var add3 = $(".address3").text();
